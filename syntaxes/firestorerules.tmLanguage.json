{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "firestorerules",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#storage"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.firestorerules",
					"match": "\\b(if|return)\\b"
				},
				{
					"name":"keyword.operator",
					"match": "(==|!=|&&|is|\\|{2}|<=|>=|<|>)"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.firestorerules",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.firestorerules",
					"match": "\\\\."
				}
			]
		},
		"storage": {
			"patterns": [
				{
					"name": "storage.type",
					"match": "\\b(bool|bytes|constraint|duration|float|int|latlng|list|number|map|string|timestamp|path)\\b"
				}
			]
		}
	},
	"scopeName": "source.firebase"
}