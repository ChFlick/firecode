{
	"name": "firecode",
	"displayName": "Firestore Rules",
	"description": "Firestore Security Rules Syntax Highlighting and Suggestions",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.2.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:firestorerules"
	],
	"main": "./out/extension.js",
	"contributes": {
        "languages": [{
            "id": "firestorerules",
            "aliases": ["Firestore Rules", "firestore"],
            "extensions": ["rules","rule"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "firestorerules",
            "scopeName": "source.firebase",
            "path": "./syntaxes/firestorerules.tmLanguage.json"
        }]
    },
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.37.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.0.2"
	}
}
