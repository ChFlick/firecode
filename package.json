{
	"name": "firecode",
	"displayName": "Firestore Rules",
	"description": "Firestore Security Rules Syntax Highlighting and Suggestions",
	"publisher": "ChFlick",
	"icon": "resources/firecode.png",
	"version": "1.2.1",
	"homepage": "https://github.com/ChFlick/firecode/blob/master/README.md",
	"keywords": [
		"firebase",
		"firestore",
		"rules"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/ChFlick/firecode"
	},
	"bugs": {
		"url": "https://github.com/ChFlick/firecode/issues"
	},
	"galleryBanner": {
		"color": "#FFCA49",
		"theme": "light"
	},
	"engines": {
		"vscode": "^1.2.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:firestorerules"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "firestorerules",
				"aliases": [
					"Firestore Rules",
					"firestore"
				],
				"extensions": [
					"rules",
					"rule"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "firestorerules",
				"scopeName": "source.firebase",
				"path": "./syntaxes/firestorerules.tmLanguage.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile  && yarn compile:grammar",
		"compile": "tsc -p ./",
		"compile:grammar": "nearleyc ./syntaxes/grammar.ne -o src/parser/grammar.ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn compile:grammar",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/chai": "^4.2.8",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^13.5.0",
		"@types/vscode": "^1.2.0",
		"chai": "^4.2.0",
		"glob": "^7.1.4",
		"mocha": "^7.0.1",
		"nearley": "2.19.1",
		"tslint": "^6.0.0",
		"typescript": "^3.3.1",
		"vscode-test": "^1.0.2"
	},
	"dependencies": {
		"@types/nearley": "^2.11.1"
	}
}
